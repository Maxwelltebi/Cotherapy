{
  "version": 2,
  "builds": [
    {
      "src": "public/*",
      "use": "@vercel/static"  
    },
    {
      "src": "api/main.py",
      "use": "@vercel/python" 
    }
  ],
  "routes": [
    {
      "src": "/chat",
      "dest": "api/main.py" 
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"  
    }
  ]
}
